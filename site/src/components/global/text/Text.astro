---
const { tag, cssUtil = [] } = Astro.props;

const Element = tag || "span";
---

<Element class:list={["content", ...cssUtil]}>
  <slot />
</Element>

<style>
  .content {
  }
  h1 {
    margin: 0px;
    padding: 0px;
    font-size: 4rem;
  }
  h2 {
    margin: 0px;
    padding: 0;
  }
  p {
    font-size: 1.2rem;
  }
  .centered {
    text-align: center;
  }
  .neon {
    font-family: "Tilt Neon";
  }
  .heading {
    text-shadow: var(--text-shadow-neon-green-glow);
  }
  .heading .flicker {
    animation: flicker 1.5s infinite alternate;
  }

  @keyframes flicker {
    0%,
    18%,
    22%,
    25%,
    53%,
    57%,
    100% {
      text-shadow: var(--text-shadow-neon-green-glow);
    }
    20%,
    24%,
    55% {
      text-shadow: none;
    }
  }
</style>
